<%- include('partials/header') %>
<link rel="stylesheet" href="css/book.css">
<main role="main">

  <div class="container form-cont">
    <div class="booktitle">
     <p class="h4 ml-4 mb-4">Book Appointment</p>
    </div>

<form class="m-4 bookform" method="post" action="bookapt">
<div class="row">
  <div class="col-lg-6 col-md-6 col-xs-12">
  <label for="Name">First Name</label>
  <input name="name" type="text" id="defaultContactFormName" class="form-control mb-4" placeholder="Please Enter Your First Name" required>
  </div>
  <div class="col-lg-6 col-md-6 col-xs-12">
    <label for="Lname">Last Name</label>
    <input name="lname" type="text" id="defaultContactFormName" class="form-control mb-4" placeholder="Please Enter Your Last Name" required>
  </div>
</div>

<div class="row">
<div class="col-lg-6 col-md-6 col-xs-12">
  <label for="Name">E-Mail</label>
  <input name="email" type="email" id="defaultContactFormEmail" class="form-control" placeholder="Please Enter Your E-mail Address" required>
  <small id="emailHelp" class="form-text text-muted ml-1 mb-4">We'll never share your email with anyone else.</small>
</div>

  <div class="col-lg-6 col-md-6 col-xs-12">
    <label for="Phone">Contact Number</label>
    <input name="Contact" type="tel" id="defaultContactFormNumber" class="form-control" placeholder="Please Enter Your Contact Number" minlength="10" maxlength="10" pattern="[7-9]{1}[0-9]{9}" required>
    <small id="contactHelp" class="form-text text-muted mb-4 ml-1">Please enter your 10 Digit Mobile Number.</small>
  </div>
  </div>

  <div class="row mb-4">
    <div class="col">
      <label for="State">State</label>
      <select name="state" onchange="print_city('state', this.selectedIndex);" id="sts" name ="stt" class="form-control custom-select" required></select>
    </div>
    <div class="col">
      <label for="City">City</label>
      <select name="city" id ="state" class="custom-select form-control" required></select>
      <script language="javascript">print_state("sts");</script>
    </div>
  </div>


    <div class="row">
      <div class="col">
        <label for="Number">Age</label>
        <input name="age" type="number" class="form-control mb-4" placeholder="Please Enter Your Age" min="1" max="110" required>
      </div>
      <div class="col">
        <label for="Number">Occupation</label>
        <input name="occupation" type="text" class="form-control mb-4" placeholder="Please Enter Your Occupation" required>
      </div>
    </div>

  <div class="row">
    <div class="col-lg-4 col-sm-12 col-xs-12">
      <label for="sex">Gender</label>
      <select class="browser-default custom-select mb-4" name="gender" required>
        <option value="Gender" disabled selected>Gender</option>
        <option name="male" value="Male">Male</option>
        <option name="female" value="Female">Female</option>
      </select>
    </div>
   <div class="col-lg-4 col-sm-6 col-xs-6">
     <label for="Number">Height</label>
     <input name="height" type="number" class="form-control" placeholder="Please Enter Your Height" min="1" required>
     <small id="emailHelp" class="form-text text-muted ml-2 mb-4">Enter your Height in centimeters.</small>
   </div>
   <div class="col-lg-4 col-sm-6 col-xs-6">
     <label for="Number">Weight</label>
     <input name="weight" type="number" class="form-control" placeholder="Please Enter Your Weight" min="10" max="150" required>
     <small id="emailHelp" class="form-text text-muted ml-2 mb-4">Enter your Weight in kilograms.</small>
   </div>
 </div>


  <div class="row">
    <div class="col">
      <label>Appointment For</label>
      <select name="Appointment" class="browser-default custom-select mb-4" required>
          <!-- <option value="" disabled>Appointment For</option> -->
          <option value="Diet Consultation"selected>Diet Consultation</option>
          <option value="Acupunture">Acupunture & Acupressure</option>
          <option value="Cupping">Cupping</option>
          <option value="Magnet & Color Therapy">Magnet & Color Therapy</option>
      </select>
      </div>
      <div class="col">
        <label for="Date">Appointment Date</label>
        <input name="Date" type="date" id="datefield" class="custom-select form-control mb-4" required>
      </div>
   </div>


  <div class="form-group">
    <label for="Date">Health History</label>
      <textarea name="message" class="form-control rounded-0" id="exampleFormControlTextarea2" rows="3" placeholder="Please Enter Present Illness and Medication." minlength="10" required></textarea>
  </div>

<!-- <div class="form-group form-check">
  <input type="checkbox" class="form-check-input" id="exampleCheck1">
  <label class="form-check-label" for="exampleCheck1">I want to receive updates in the future</label>
</div> -->
<button type="Submit" class="submit btn btn-outline-info btn-rounded z-depth-0 my-4 waves-effect">Request An Appointment</button>
</form>
</div>
<%- include('partials/footer') %>
